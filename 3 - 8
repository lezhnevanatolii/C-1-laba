#include <iostream>

void leftTriangle(int x) {
    for (int i = 1; i <= x; i++) {
        for (int j = 0; j < i; j++) {
            std::cout << "*";
        }
        std::cout << std::endl;
    }
}

int main() {
    int height;
    std::cout << "Введите высоту треугольника: ";
    std::cin >> height;
    
    if (std::cin.fail() || height <= 0) {
        std::cout << "Ошибка ввода!" << std::endl;
        return 1;
    }
    
    leftTriangle(height);
    
    return 0;
}
