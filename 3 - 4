#include <iostream>

int pow(int x, int y) {
    int result = 1;
    for (int i = 0; i < y; i++) {
        result *= x;
    }
    return result;
}

int main() {
    int x, y;
    
    std::cout << "Введите число: ";
    std::cin >> x;
    
    std::cout << "Введите степень: ";
    std::cin >> y;
    
    if (std::cin.fail() || y < 0) {
        std::cout << "Ошибка ввода!" << std::endl;
        return 1;
    }
    
    int result = pow(x, y);
    std::cout << x << " в степени " << y << " = " << result << std::endl;
    
    return 0;
}
