#include <iostream>
#include <cstdlib>
#include <ctime>

void guessGame() {
    std::srand(std::time(0));
    int secret = std::rand() % 10;
    int attempts = 0;
    int guess;
    
    while (true) {
        std::cout << "Введите число от 0 до 9: ";
        std::cin >> guess;
        
        if (std::cin.fail() || guess < 0 || guess > 9) {
            std::cout << "Ошибка ввода!" << std::endl;
            std::cin.clear();
            std::cin.ignore(1000, '\n');
            continue;
        }
        
        attempts++;
        
        if (guess == secret) {
            std::cout << "Вы угадали!" << std::endl;
            std::cout << "Вы отгадали число за " << attempts << " попытки" << std::endl;
            break;
        } else {
            std::cout << "Вы не угадали, введите число от 0 до 9:" << std::endl;
        }
    }
}

int main() {
    guessGame();
    return 0;
}
