#include <iostream>

int* concat(int arr1[], int size1, int arr2[], int size2) {
    int* newArr = new int[size1 + size2];
    
    for (int i = 0; i < size1; i++) {
        newArr[i] = arr1[i];
    }
    
    for (int i = 0; i < size2; i++) {
        newArr[size1 + i] = arr2[i];
    }
    
    return newArr;
}

int main() {
    int n1, n2;
    
    std::cout << "Введите размер первого массива: ";
    std::cin >> n1;
    
    std::cout << "Введите размер второго массива: ";
    std::cin >> n2;
    
    if (std::cin.fail() || n1 <= 0 || n2 <= 0) {
        std::cout << "Ошибка ввода!" << std::endl;
        return 1;
    }
    
    int arr1[100], arr2[100];
    
    std::cout << "Введите элементы первого массива: ";
    for (int i = 0; i < n1; i++) {
        std::cin >> arr1[i];
    }
    
    std::cout << "Введите элементы второго массива: ";
    for (int i = 0; i < n2; i++) {
        std::cin >> arr2[i];
    }
    
    int* newArr = concat(arr1, n1, arr2, n2);
    
    std::cout << "Объединенный массив: ";
    for (int i = 0; i < n1 + n2; i++) {
        std::cout << newArr[i] << " ";
    }
    std::cout << std::endl;
    
    delete[] newArr;
    return 0;
}
