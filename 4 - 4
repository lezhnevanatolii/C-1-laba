#include <iostream>

int* add(int arr[], int size, int x, int pos) {
    int* newArr = new int[size + 1];
    
    for (int i = 0; i < pos; i++) {
        newArr[i] = arr[i];
    }
    
    newArr[pos] = x;
    
    for (int i = pos; i < size; i++) {
        newArr[i + 1] = arr[i];
    }
    
    return newArr;
}

int main() {
    int n;
    std::cout << "Введите размер массива: ";
    std::cin >> n;
    
    if (std::cin.fail() || n <= 0) {
        std::cout << "Ошибка ввода!" << std::endl;
        return 1;
    }
    
    int arr[100];
    std::cout << "Введите элементы массива: ";
    for (int i = 0; i < n; i++) {
        std::cin >> arr[i];
    }
    
    int x, pos;
    std::cout << "Введите число для вставки: ";
    std::cin >> x;
    std::cout << "Введите позицию для вставки (0-" << n << "): ";
    std::cin >> pos;
    
    if (pos < 0 || pos > n) {
        std::cout << "Неверная позиция!" << std::endl;
        return 1;
    }
    
    int* newArr = add(arr, n, x, pos);
    
    std::cout << "Новый массив: ";
    for (int i = 0; i < n + 1; i++) {
        std::cout << newArr[i] << " ";
    }
    std::cout << std::endl;
    
    delete[] newArr;
    return 0;
}
